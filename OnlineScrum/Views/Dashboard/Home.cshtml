@using OnlineScrum.Models

@{
    ViewBag.Title = "Home";
}
<div class="col-md-8">
    <br />
    @foreach (Project proj in ViewBag.Projects)
    {
        <div class="row">
            <div class="col-md-12"><form action="/project" method="POST">
                    <h2 class="col-md-7">@proj.Name</h2>
                    <input style="margin-top: 15px" type="submit" class="pull-right btn col-md-3 btn-default" value="Access project" />
                    <input type="hidden" name="projectName" value="@proj.Name" />
                </form>
            </div>
            <h4 class="col-md-10">
                <small>@proj.Description</small>
            </h4>
        </div>
        <hr/>
    }
    
</div>
<br/>
<div class="well col-md-4">
    <a href="https://www.scrumalliance.org/">
        <img class="col-md-offset-3" width="180px" src="http://media.bestofmicro.com/E/Y/599290/original/scrum-alliance-logo.png" />
    </a>
    <br />
    <br/>
    <p>This platform follows the guidelines set by the <a href="https://www.scrumalliance.org/"><i>ScrumAlliance</i></a>.</p>
        <p>With this platform you are able get an introduction to the Scrum Methodology which is popular among the professional environment.</p>
</div>