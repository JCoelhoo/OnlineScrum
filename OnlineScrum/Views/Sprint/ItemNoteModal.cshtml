@using OnlineScrum.Models
@model Item

@foreach (Item item in ViewBag.Items)
{
    using (Ajax.BeginForm("Add_Notes", "Sprint", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "empList" }, new { hidefocus = "hidefocus", @id = "form" + item.ItemID }))
    {
        <div id="modal@(item.ItemID)" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Notes</h4>
                    </div>
                    <div class="modal-body">
                        <div class="text-center">

                            @if (item.ItemNotes != null)
                            {
                                foreach (var note in item.ItemNotes.Split(new string[] { ".NOTE_SEPARATOR." }, StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <p>@note</p>
                                    <hr />
                                }
                            }

                            <div class="text-center">
                                @Html.TextAreaFor(m => m.ItemNotes, new { @class = "form-control", @rows = 3 })
                                <input style="display: none" id="ItemID" value="@item.ItemID" name="ItemID" />
                                <br />
                                <input class="btn btn-info col-md-12" type=submit value="Save" />
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    }
}